@prefix rr: <http://www.w3.org/ns/r2rml#>.
@prefix rml: <http://semweb.mmlab.be/ns/rml#>.
@prefix ex: <http://faulty.subject.class.example.com/>.
@prefix ql: <http://semweb.mmlab.be/ns/ql#> .


####################################################################################
#Faulty subjectMap class with Literal instead of IRI
####################################################################################
<#faultySubjectClassMappingA> a rr:TriplesMap;
	rml:logicalSource [
		rml:source "simpleTestInput.json";
		rml:referenceFormulation ql:JSONPath;
		rml:iterator "$"
	];

	rr:subjectMap [
		rr:template "http://faulty.subject.class.example.com/Child/{first}";
		rr:class "http://faulty.subject.class.example.com/Todler"
	].



